Private Sub Command1_Click(Index As Integer)
    'On Error Resume Next
    
    Dim i As Integer
    Dim X As Integer
    Dim listSubtotal As Double
    Dim listIva As Double
    Dim listTotal As Double
    Dim viva As Double
    
    Select Case Index
    
            Case 0
                
    TipoErr = 7 'ERROR
                
                If Combo1(1) <> "" And Text1(1) <> "" And Text1(2) <> "" Then
                    
                    Dim viid As String
                    Dim videscripcion As String
                    Dim vicantidad As String
                    Dim viprecio As String
                    
                    Dim c1 As Integer
                    Dim c2 As Integer
                    Dim c3 As Integer
                    Dim c4 As Integer
                    
    TipoErr = 8 'ERROR
                    
                    viid = Rs2.Fields(0).Value
                    videscripcion = Mid(Combo1(1), 1, 47)
                    vicantidad = Round(Val(Text1(1)), 2)
                    viprecio = Round(Val(Text1(2)), 2)
                    
    TipoErr = 9 'ERROR
                    
                    ' 1 - 10
                    c1 = 10 - Len(viid)
                    
                    For i = 1 To c1
                        viid = " " & viid
                    Next i
                    
                    ' 12 - 58
                    c2 = 47 - Len(videscripcion)
                    
                    For i = 1 To c2
                        videscripcion = videscripcion & " "
                    Next i
                    
                    ' 60 - 74
                    c3 = 15 - Len(vicantidad)
                    
                    For i = 1 To c3
                        vicantidad = " " & vicantidad
                    Next i
                    
                    ' 76 - 90
                    c4 = 15 - Len(viprecio)
                    
                    For i = 1 To c4
                        viprecio = " " & viprecio
                    Next i
                    
    TipoErr = 10 'ERROR
                    
                    List1.AddItem viid & " " & videscripcion & " " & vicantidad & " " & viprecio
                    
    TipoErr = 11 'ERROR
                    
                    Text1(1) = ""
                    Text1(2) = ""
                    
                    With Combo1(1)
                        .Text = ""
                        .BackColor = &HC0C0FF
                        .SetFocus
                    End With
                    
                    listSubtotal = 0
                    listIva = 0
                    
                    For i = 0 To List1.ListCount - 1
                        
                        List1.ListIndex = i
                        List1.SetFocus
                        
                        listSubtotal = Round((Trim(Mid(List1.Text, 60, 15)) * Trim(Mid(List1.Text, 76, 15))), 2) + listSubtotal
                        
                        viva = Get_ItemIva(Trim(Mid(List1.Text, 1, 10)))
                        listIva = Round((Trim(Mid(List1.Text, 60, 15)) * Trim(Mid(List1.Text, 76, 15))) * viva, 2) + listIva
                    
                    Next i
                    
                    listTotal = listSubtotal + listIva
                    
                    Text1(6) = listSubtotal
                    Text1(5) = listIva
                    Text1(4) = listTotal
                    
                Else
                    
                    MsgBox "Llenar todos los campos", vbCritical, "Error"
                    Combo1(0).SetFocus
                    
                End If
                
            Case 1
            
                On Error Resume Next
                
                Dim intX As Integer
                
                With List1
                    intX = .ListIndex
                    .RemoveItem (intX)
                End With
                
                listSubtotal = 0
                listIva = 0
                    
                For i = 0 To List1.ListCount - 1
                    
                    List1.ListIndex = i
                    List1.SetFocus
                        
                    listSubtotal = Round((Trim(Mid(List1.Text, 60, 15)) * Trim(Mid(List1.Text, 76, 15))), 2) + listSubtotal
                                            
                    viva = Get_ItemIva(Trim(Mid(List1.Text, 1, 10)))
                    listIva = Round((Trim(Mid(List1.Text, 60, 15)) * Trim(Mid(List1.Text, 76, 15))) * viva, 2) + listIva
                
                Next i
                    
                listTotal = listSubtotal + listIva
                    
                Text1(6) = listSubtotal
                Text1(5) = listIva
                Text1(4) = listTotal
        
        Case 2
            
            On Error Resume Next
            
            InTipoAltaClienteProveedor = 1
            
            If StTipoVentasCompras = "Ventas" Then
                
                StTipoClienteProveedor = "Cliente"
                Me.Enabled = False
                
                With frmClientesProveedoresNuevo
                    .Caption = "Añadir nuevo Cliente"
                    .Show 1
                End With
            
            End If
            
            If StTipoVentasCompras = "Compras" Then
                
                StTipoClienteProveedor = "Proveedor"
                Me.Enabled = False
                
                With frmClientesProveedoresNuevo
                    .Caption = "Añadir nuevo Proveedor"
                    .Show 1
                End With
            
            End If
            
            Unload frmVentasCompras
            Set frmVentasCompras = Nothing
            frmVentasCompras.Show
    
    End Select
    
    Exit Sub

err:
    
    On Error Resume Next
    
    MsgBox "Error tipo " & TipoErr & " - " & err.Description, vbCritical, "Error"

End Sub

